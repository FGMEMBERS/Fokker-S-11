<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttour2</object-name>
    <object-name>intcontour</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intfenetre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intfenetre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intfenetre</object-name>
  </animation>

  <!-- Pilote
  <model>
    <name>Pilote</name>
    <path>Aircraft/Fokker-S-11/Models/Pilot/pilot.xml</path>
    <offsets>
