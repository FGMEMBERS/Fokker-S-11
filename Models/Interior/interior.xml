  </model> -->

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Fokker-S-11/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.304 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.280 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopyTotale</name>
    <object-name>intcontour</object-name>
    <object-name>inttour2</object-name>
    <object-name>intfenetre</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopyTotale</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 0.55 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

